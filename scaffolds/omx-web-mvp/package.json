{
  "name": "omx-web-mvp",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "services/api",
    "services/worker"
  ],
  "scripts": {
    "build": "npm run build -w services/api && npm run build -w services/worker",
    "dev:api": "npm run start:dev -w services/api",
    "dev:worker": "npm run start:dev -w services/worker",
    "prisma:generate": "prisma generate --schema prisma/schema.prisma",
    "prisma:migrate:dev": "prisma migrate dev --schema prisma/schema.prisma",
    "prisma:migrate:deploy": "prisma migrate deploy --schema prisma/schema.prisma"
  },
  "dependencies": {
    "@prisma/client": "^6.6.0"
  },
  "devDependencies": {
    "prisma": "^6.6.0",
    "typescript": "^5.7.3"
  }
}
